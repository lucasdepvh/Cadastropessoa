<legend class="text-semibold">
  Contato</legend>

<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered ">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Tipo</th>
          <th>Observação</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td>
              <%= contact.name %>
            </td>
            <td>
              <%= contact.email %>
            </td>
            <td>
              <%= contact.kind.description %>
            </td>
            <td>
              <%= contact.rmk %>
            </td>
            <td>
              <%= link_to t('buttons.show'), contact %>
            </td>
            <td>
              <%= link_to t('buttons.edit'), edit_contact_path(contact) %>
            </td>
            <td>
              <%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %>
            </td>
          </tr>
          <% end %>
      </tbody>
      <div class='col-md-12'>
    </table>
    </div>
  </div>
  <%= link_to new_contact_path, class: 'btn btn-primary btn-xs ', style: '' do %>
    <span class=""> Cadastrar</span>
    <% end %>
</div>
</div>