<br>
<%= form_for(@kind, html:{ class: "basic-grey" }) do |form| %>
<h1>Tipo</h1>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :kind_description %>
  </div>
<br>
    <div class="field">
    <%= form.submit t('buttons.save'), class: "btn btn-primary" %>
    <%= link_to t('buttons.back'), kinds_path, class: "btn btn-success"%>
  </div>

   <% if @kind.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@kind.errors.count, 'error')} #{t('messages.errors')}:" %></h2>

      <ul>
      <% @kind.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
<% end %>
<% end %>
